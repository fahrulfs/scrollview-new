<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppsScroll" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- set the height of Action Bar . -->
        <item name="actionBarSize">60dp</item>

        <!-- Mengatur warna actionbar . -->
        <item name="colorPrimary">#058C17</item>


        <item name="colorPrimaryVariant">#1B9100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:actionBarDivider" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
</resources>